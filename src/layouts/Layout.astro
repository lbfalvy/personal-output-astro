---
import { getImage } from 'astro:assets';
import { getPics, picUrl } from '../pics';
import NavLink from '../components/NavLink.astro';

interface Props {
  title: string;
  meta?: [string, string][];
}

const { title, meta } = Astro.props;

const pics = await getPics();

const iconUrl = await getImage({ src: pics.find(x => x.slug == "090-personal_output")!.data.image, width: 64 });
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/svg+xml" href={iconUrl.src} />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="/main.css">
    <script is:inline src="https://kit.fontawesome.com/383945ce77.js" crossorigin="anonymous"></script>
    {meta?.map(([name, content]) => (
      <meta name={name} content={content} />
    ))}
    <title>{title}</title>
    <slot name="head" />
  </head>
  <body>
    <nav>
      <div class="nav">
        <h1 class="title"><NavLink href="/">annaja</NavLink></h1>
        <div id="dropdown" class="dropdown-content">
          <NavLink href="/about">about</NavLink>
          <NavLink area="/works" href={picUrl(pics.reverse()[0])}>works</NavLink>
          <NavLink href="/contact">contact</NavLink>
        </div>
      </div>
      <div id="menuToggle" class="menuToggle">
        <div class="bar1"></div>
        <div class="bar2"></div>
        <div class="bar3"></div>
      </div>
    </nav>
    <main>
      <slot/>
    </main>
    <footer>
      <section class="sociallinks">
        <a href="https://www.instagram.com/annaja_personal_output/" target="_blank" title="AnnaJa on Instagram" aria-label="AnnaJa on Instagram">
          <i class="fa-brands fa-square-instagram"></i>
        </a>
        <a href="https://www.facebook.com/profile.php?id=100070068163815" target="_blank" title="AnnaJa on Facebook" aria-label="AnnaJa on Facebook">
          <i class="fa-brands fa-square-facebook"></i>
        </a>
      </section>
    </footer>
    <!--  mobile menu toggle: -->
    <script>
      const menuToggle = document.getElementById("menuToggle");
      menuToggle?.addEventListener("click", () => {
        menuToggle.classList.toggle("change");
        let dropdown = document.getElementById("dropdown");
        dropdown?.classList.toggle("show");
      });
    </script>
  </body>
</html>

<style>

  a {
    display: block;
    margin-bottom: 0.3rem;
  }

  body {
    /* display: grid; */
    padding: 1.5rem 0 0 0;
    background-color: hsl(0, 0%, 90%);
    font-family: 'Roboto', sans-serif;
    min-height: 100lvh;
    display: flex;
    flex-direction: column;
    margin: 5rem 0 0 0;
  }

  /* navigation */
  nav {
    flex: 0 0 auto;
    position: relative;
    display: grid;
    padding: 1rem;
  }

  .nav {
    display: grid;
    justify-content: center;
    text-align: center;
  }

  .title {
    font-size: 1rem;
    font-weight: 400;
    margin-bottom: 0.3rem;
  }

  /* mobile menu toggle button */
  .menuToggle {
    position: absolute;
    top: 0.5rem;
    right: 1.5rem;
  }

  .bar1,
  .bar2,
  .bar3 {
    width: 25px;
    height: 3px;
    background-color: hsl(0, 0%, 50%);
    margin: 6px 0;
    transition: 0.4s;
  }

  .change .bar1 {
    background-color: hsl(0, 74%, 27%);
    transform: translate(0, 9px) rotate(-45deg);
  }

  .change .bar2 {
    background-color: hsl(0, 74%, 27%);
    opacity: 0;
  }

  .change .bar3 {
    background-color: hsl(0, 74%, 27%);
    transform: translate(0, -9px) rotate(45deg);
  }

  .dropdown-content {
    /* display: none; */
    transition: opacity 1s;
    opacity: 0;
  }

  .show {
    display: block;
    opacity: 1;
  }

  main {
    flex: 1 0 auto;
  }

  /* footer */
  footer {
    background-color: hsl(0, 0%, 60%);
    display: grid;
    justify-content: center;
    flex: 0 0 auto;
    padding: 2rem 2rem;
  }

  .sociallinks a {
    display: inline;
    margin: 0 1rem;
    font-size: 2rem;
    cursor: pointer;
  }

  .sociallinks a {
    color: hsl(0, 65%, 20%, 0.5);
  }

  .sociallinks a:hover {
    transition: 1s;
    color: hsl(0, 65%, 20%);
    cursor: pointer;
  }

  h1 {
    margin-top: 0;
  }

  @media screen and (min-width: 750px) {
    footer {
      padding: 7rem 2rem;
    }
  }

  @media screen and (min-width: 900px) {
    .menuToggle {
      display: none;
    }

    .nav {
      display: grid;
      grid-template-columns: auto auto;
      gap: 1rem;
    }

    #dropdown {
      opacity: 1;
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      gap: 1rem;
    }

    main {
      grid-template-columns: 70% auto;
      padding: 0.5rem 3rem;
    }
  }
</style>