<style>
  :global(main) {
    padding: 1rem 1rem 0 1rem;
  }

  #myGallery > :global(*) {
    display: block;
    margin: 1rem 0;
  }

  #myGallery > :global(*:first-child) {
    margin-top: 0;
  }
  .quotes {
    display: inline-block;
    width: 100%;
    background-color: hsl(0, 0%, 60%);
    padding: 2.5rem 1.5rem;
  }

  .quotes__1 {
    display: inline-block;
    width: 100%;

    background-color: hsl(0, 0%, 50%);
    padding: 4rem 1.5rem;
  }

  .quotes__2 {
    display: inline-block;
    width: 100%;
    background-color: hsl(0, 0%, 50%);
    padding: 2rem 1.5rem;
  }

  .quotes__3 {
    display: inline-block;
    width: 100%;
    background-color: hsl(0, 0%, 50%);
    padding: 4rem 1.5rem;
  }

  /* overrides */

  .title {
    font-weight: 600;
  }

  @media screen and (min-width: 750px) {
    #myGallery {
      column-count: 2;
    }

    main::before {
      position: fixed;
      top: 72svh;
    }
  }

  @media screen and (min-width: 900px) {
    #myGallery {
      column-count: 3;
    }
  }

  @media screen and (min-width: 1200px) {
    #myGallery {
      column-count: 4;
    }
  }

  @media screen and (min-width: 1500px) {
    #myGallery {
      column-count: 6;
    }
  }

  @media screen and (min-width: 1800px) {
    #myGallery {
      column-count: 7;
    }
  }
</style>