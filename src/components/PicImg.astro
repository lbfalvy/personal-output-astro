---
import { getConfiguredImageService, getImage, Image, Picture } from 'astro:assets';
import { getPics, type Pic } from '../pics'

interface Props {
    pic?: Pic
    slug?: string
}

const pic = Astro.props.pic ?? (await getPics()).find(x => x.slug == Astro.props.slug);

if (pic == undefined) throw new Error("Invalid slug!");
---

<Image src={pic.data.image} alt={pic.slug} />