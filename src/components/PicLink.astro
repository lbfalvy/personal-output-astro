---
import { Image } from 'astro:assets'
import { getPics, picUrl, type Pic } from '../pics'

interface Props {
	pic?: Pic
	slug?: string
}

const pic = Astro.props.pic ?? (await getPics()).find(p => p.slug == Astro.props.slug);

if (!pic) throw new Error("Invalid slug");
---

<a href={picUrl(pic)}><Image class="img" src={pic.data.image} alt={pic.slug} inferSize={true} width={600} /></a>

<style>
	a {
		display: block;
	}
	.img {
		display: block;
    width: 100%;
    height: 100%;
	}
</style>