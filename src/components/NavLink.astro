---
type Props = astroHTML.JSX.AnchorHTMLAttributes & { area?: string };
let cls = Astro.props.class ?? '';
const { area, href } = Astro.props;
const path = new URL(Astro.request.url).pathname;
if (area ? path.startsWith(area) : path == href) {
  cls += " active"
}
---
<a {...Astro.props} class={cls + " nav_link"}><slot/></a>

<style>
  a {
    display: block;
    margin-bottom: 0.3rem;
  }

  .active {
    font-weight: 600;
  }
</style>